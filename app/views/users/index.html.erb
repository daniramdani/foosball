<div class="container">
  <h2 class="text-left">Users</h2> 
  <%= link_to "Create User", new_user_path, class: "btn btn-primary pull-right" %>
  <% if @users.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Username</th>
          <th>Name</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %> 
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.username %></td>
            <td><%= user.firstname %> <%= user.lastname %></td>
            <td><%= link_to "Edit", edit_user_path(user) %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    No Data!
  <% end %>
</div>