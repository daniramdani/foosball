<div class="container">
  <div class="col-sm-3">
    <h2 class="text-left">Add Team</h2>
    <%= form_for @team do |f| %>
      <%= f.label :player_one %>
      <%= f.select :player_one, User.all.map{|u| ["#{u.firstname} #{u.lastname}", u.id] }, { :prompt => "Select Player One"}, class: "form-control" %>
      <br>
      <%= f.label :player_two %>
      <%= f.select :player_two, User.all.map{|u| ["#{u.firstname} #{u.lastname}", u.id] }, { :include_blank => "Leave it if One Player" }, class: "form-control" %>
      <br>
      <%= f.submit "Submit", class: "form-control btn btn-primary" %>
    <% end %>
  </div>
</div>