<!DOCTYPE html>
<html>
<head>
  <title>Foosball</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Users", users_path, class: "" %></li>
            <li><%= link_to "Teams", teams_path, class: "" %> </li>
            <li><%= link_to "Matches", matches_path, class: "" %></li>
            <li><%= link_to "Rankings", ranks_path, class: "" %></li>
        </ul>
      </div>
    </div>
  </nav>

	<% if flash && flash[:alerts] %>
	  <div class="container">
	    <div class="alert alert-danger">
	      <% flash[:alerts].each do |error| %>
	        <%= error %><br/>
	    	<% end %>
	    </div>
	  </div>
	<%end%>

	<% if flash && flash[:notices] %>
	  <div class="container">
	    <div class="alert alert-success">
	      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	        <span aria-hidden="true">&times;</span>
	      </button>
	      <% flash[:notices].each do |error| %>
	        <%= error %>
	      </div>
	    <%end%>
	  </div>
	<%end%>

	<%= yield %>
  <section class="space-20"> </div>
</body>
</html>